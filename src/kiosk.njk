---
title: Kiosk - Fjörlistinn
layout: base.njk
---

{% block extraCss %}
<link rel="stylesheet" href="/css/pages/kiosk.css">
{% endblock %}

<div class="kiosk-page">
  {# Header #}
  <div class="kiosk-header">
    <div class="kiosk-logo">Fjörlistinn</div>
    <div class="kiosk-center-name" id="kioskCenterName">-</div>
    <div class="kiosk-time" id="kioskTime">--:--</div>
  </div>

  {# Main Content Area #}
  <div class="kiosk-main" id="kioskMain">
    <div class="kiosk-card">
      <div class="loading">
        <div class="loading-spinner"></div>
        <p>Hleð...</p>
      </div>
    </div>
  </div>

  {# Hidden exit trigger (tap 5 times to exit) #}
  <button class="kiosk-exit-trigger" id="kioskExitTrigger"></button>
</div>

{% block extraJs %}
<script src="/js/pages/kiosk/main.js"></script>
{% endblock %}